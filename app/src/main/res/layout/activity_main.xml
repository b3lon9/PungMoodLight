<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.b3lon9.pungmoodlight.viewmodels.MainViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="download"
            android:onClickListener="@{() -> vm.download()}"/>

        <Button
            android:id="@+id/main_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="play"
            android:onClickListener="@{() -> vm.play()}"/>

        <Button
            android:id="@+id/main_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stop"
            android:onClickListener="@{() -> vm.stop()}"/>

    </LinearLayout>
</layout>
