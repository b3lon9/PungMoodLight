<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ControlButtonStyle">
        <item name="android:layout_width">@dimen/control_breath_button_size</item>
        <item name="android:layout_height">@dimen/control_breath_button_size</item>

        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
    </style>

    <style name="ControlPlayerStyle" parent="ControlButtonStyle">
        <item name="android:layout_width">@dimen/control_player_button_size</item>
        <item name="android:layout_height">@dimen/control_player_button_size</item>
    </style>

    <style name="AdvertiseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SettingItemsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/setting_items_margin_bottom</item>
        <item name="android:textSize">@dimen/setting_checkbox_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CheckBoxStyle" parent="SettingItemsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/setting_checkbox_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TimePickerGroupStyle" parent="SettingItemsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/setting_timepicker_padding</item>
        <item name="android:paddingRight">@dimen/setting_timepicker_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TimePickerBaseStyle" parent="SettingItemsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TimePickerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">center</item>
    </style>

    <style name="RadioGroupStyle" parent="TimePickerBaseStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButtonStyle" parent="TimePickerStyle" >
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <!--download dialog-->
    <style name="DownloadDialogStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProgressMsgStyle" parent="DownloadDialogStyle">
        <item name="android:layout_marginTop">@dimen/download_dialog_progress_margin_top</item>
        <item name="android:textSize">@dimen/download_dialog_progress_msg</item>
        <item name="android:text">@string/download_init</item>
    </style>
</resources>