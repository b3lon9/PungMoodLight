<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ControlButtonStyle">
        <item name="android:layout_width">@dimen/control_breath_button_size</item>
        <item name="android:layout_height">@dimen/control_breath_button_size</item>

        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
    </style>

    <style name="ControlPlayerStyle" parent="ControlButtonStyle">
        <item name="android:layout_width">@dimen/control_player_button_size</item>
        <item name="android:layout_height">@dimen/control_player_button_size</item>
    </style>

    <style name="AdvertiseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TimePickerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>